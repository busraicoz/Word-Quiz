<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
  >
    <TextView
        android:id="@+id/wordt"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/mor"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/meant"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wordt"
        android:gravity="center"
        android:background="@drawable/lila"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/pn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue"
        android:text="PLAY NOW"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/meant" />
    <Button
        android:id="@+id/an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD NEW WORD"
        android:background="@drawable/n"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/meant" />
</RelativeLayout>